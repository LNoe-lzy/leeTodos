<%- include header.ejs %>
<div class="content-scrollable">
    <div class="wrapper-auth">
        <h1 class="title-auth">Join.</h1>
        <p class="subtitle-auth">Joining allows you to make private lists</p>
        <form method="post">
            <div class="input-symbol">
                <input type="email" name="email" placeholder="Your Email">
                <span class="icon-email" title="Your Email"></span>
            </div>
            <div class="input-symbol">
                <input type="password" name="password" placeholder="Password">
                <span class="icon-lock" title="Password"></span>
            </div>
            <div class="input-symbol">
                <input type="password" name="confirm" placeholder="Confirm Password">
                <span class="icon-lock" title="Confirm Password"></span>
            </div>
            <button type="submit" class="btn-primary">Join Now</button>
        </form>
    </div>
    <a href="/signin" class="link-auth-alt">Have an account? Sign in</a>
</div>
<%- include footer.ejs %>